# ~/.bash_profile: executed by bash(1) for non-login shells.

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

export BASH_SILENCE_DEPRECATION_WARNING=1


# Start applications
if [ -f ~/.bash_start ]; then
  . ~/.bash_start
fi

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

# Command history browsing
# https://www.macworld.com/article/1146015/termhistory.html
bind '"[A":history-search-backward'
bind '"[B":history-search-forward'

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# make sure user installed binaries override system's
export PATH=/usr/local/bin:$PATH


# BASH ALIASES
# group directories first: https://superuser.com/a/109546
# show dotfiles first: https://superuser.com/a/448294
if test "$(uname)" = "Darwin" ; then
  alias ls='LC_COLLATE=en_GB.UTF-8 gls -lhFG --color=auto --group-directories-first'
elif test "$(lsb_release -is)" = "Ubuntu" ; then
  # TODO: show dotfiles first
  alias ls='LC_COLLATE=C.UTF-8 ls -Gh --color=auto --group-directories-first'
fi

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias top="htop"

alias g="git"
alias t="task"
alias x="tmuxinator"
alias v="vim"


# [macos] remove bash deprecation warning
export BASH_SILENCE_DEPRECATION_WARNING=1


# Alias definitions
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi
