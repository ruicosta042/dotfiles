[user]
        name = __GIT_USERNAME__
        email = __GIT_EMAIL__
[core]
	editor = vim
[hub]
        protocol = ssh
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[diff]
        tool = vimdiff
        prompt = false
[help]
        autocorrect = 1
[alias]
        ad = add
        br = branch
        brd = branch --delete
        brD = branch --delete --force
        brr = branch --remotes
        cm = commit --verbose
        cmm = commit --verbose --message
        cma = commit --amend
        cman = commit --amend --no-edit
        ch = checkout
        chb = checkout -b
        cp = cherry-pick
        cpa = cherry-pick --abort
        cpc = cherry-pick --continue
        fe = fetch
        lg = l
        pl = pull
        plr = pull --rebase
        ps = push
        psf = push --force-with-lease
        psu = push -u
        rb = rebase
        rba = rebase --abort
        rbc = rebase --continue
        rbi = rebase --interactive
        rs = reset
        sh = stash
        shc = stash clear
        shl = stash list
        shp = stash pop
        st = status --short --branch

        # Remove remote branches that have already been merged to main
        rmp = remote prune

        # Remove branches that have already been merged to main.
        # a.k.a. ‘delete merged’
        brdm = branch --merged | grep -v  \\* | xargs -n 1 git branch -d

        # Find commits by commit message
        fm = !f() { git log --pretty=format: %C(dim blue)%h%Creset %C(bold blue)%cd%Creset %C(yellow)%d%Creset %s %C(bold blue)%an%Creset --decorate --date=short --grep=$1; }; f

        # better log
        l = !git log --color=always --pretty=format:'%C(dim blue)%h%Creset %C(bold blue)%cr%Creset %C(yellow)%d%Creset %s %C(bold blue)%an%Creset' --abbrev-commit \
                | sed 's/ ago//' \
                | sed -E 's/([0-9]+) seconds/\\1s/' \
                | sed -E 's/([0-9]+) minutes/\\1m/' \
                | sed -E 's/([0-9]+) hours/\\1h/' \
                | sed -E 's/([0-9]+) days/\\1D/' \
                | sed -E 's/([0-9]+) weeks/\\1W/' \
                | sed -E 's/([0-9]+) months/\\1M/' \
                | less --RAW-CONTROL-CHARS --chop-long-lines
